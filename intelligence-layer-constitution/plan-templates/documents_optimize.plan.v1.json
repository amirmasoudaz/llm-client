{
  "schema_version": "1.0",
  "plan_template_id": "Documents.Optimize@1.0.0",
  "intent_type": "Documents.Optimize",
  "plan_version": "planner-1.0",
  "description": "Ensure a document is processed, optimize it, export a PDF artifact, propose platform patch updates, and request approval to apply.",
  "steps": [
    {
      "step_id": "s1",
      "kind": "operator",
      "name": "Platform.Context.Load",
      "operator_name": "Platform.Context.Load",
      "operator_version": "1.0.0",
      "effects": ["read_only"],
      "policy_tags": ["read_only", "platform_read"],
      "risk_level": "low",
      "cache_policy": "ttl_only",
      "idempotency_template": "platform_context:{tenant_id}:{thread_id}",
      "payload": { "thread_id": { "from": "intent.thread_id" } },
      "produces": [
        "context.platform",
        "context.intelligence",
        "context.platform_context_hash",
        "context.student_background_hash",
        "context.composer_prereqs_hash"
      ]
    },
    {
      "step_id": "s2",
      "kind": "operator",
      "name": "Documents.Process",
      "operator_name": "Documents.Process",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["documents", "pii_allowed"],
      "risk_level": "low",
      "cache_policy": "use_if_safe",
      "idempotency_template": "doc_process:{tenant_id}:{intent.inputs.document_id}:default",
      "payload": {
        "document_id": { "from": "intent.inputs.document_id" },
        "processing_profile": { "const": "default" }
      },
      "produces": ["outcome.document_processed"]
    },
    {
      "step_id": "s3",
      "kind": "operator",
      "name": "Documents.Optimize",
      "operator_name": "Documents.Optimize",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["documents", "draft_only"],
      "risk_level": "low",
      "cache_policy": "use_if_safe",
      "idempotency_template": "doc_optimize:{tenant_id}:{intent.inputs.document_id}:{outcome.document_processed.hash.value}:{computed.requested_edits_hash}",
      "payload": {
        "document_id": { "from": "intent.inputs.document_id" },
        "document_processed": { "from": "outcome.document_processed" },
        "requested_edits": { "from": "intent.inputs.requested_edits" },
        "custom_instructions": { "from": "intent.inputs.custom_instructions" }
      },
      "produces": ["outcome.document_optimized"]
    },
    {
      "step_id": "s4",
      "kind": "operator",
      "name": "Documents.Export",
      "operator_name": "Documents.Export",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome", "s3_sandbox_write"],
      "policy_tags": ["documents"],
      "risk_level": "low",
      "cache_policy": "never",
      "idempotency_template": "doc_export:{tenant_id}:{intent.inputs.document_id}:{outcome.document_optimized.hash.value}:{intent.inputs.export_format}",
      "payload": {
        "document_id": { "from": "intent.inputs.document_id" },
        "optimized_document": { "from": "outcome.document_optimized" },
        "export_format": { "from": "intent.inputs.export_format" }
      },
      "produces": ["outcome.artifact_pdf"]
    },
    {
      "step_id": "s5",
      "kind": "operator",
      "name": "Documents.ApplyToPlatform.Propose",
      "operator_name": "Documents.ApplyToPlatform.Propose",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["apply_proposal", "platform_write"],
      "risk_level": "medium",
      "cache_policy": "never",
      "idempotency_template": "patch_proposal:{tenant_id}:{context.platform.student.id}:{outcome.artifact_pdf.hash.value}",
      "payload": {
        "student_id": { "from": "context.platform.student.id" },
        "funding_request_id": { "from": "context.platform.funding_request.id" },
        "document_type": { "const": "resume" },
        "artifact": { "from": "outcome.artifact_pdf" }
      },
      "produces": ["outcome.platform_patch_proposal"]
    },
    {
      "step_id": "s6",
      "kind": "human_gate",
      "name": "Apply.PlatformPatch",
      "effects": ["db_write_platform"],
      "policy_tags": ["apply", "platform_write"],
      "risk_level": "medium",
      "cache_policy": "never",
      "gate": {
        "gate_type": "apply_platform_patch",
        "reason_code": "REQUIRES_APPROVAL",
        "title": "Apply document updates",
        "description": "Apply the generated document artifact to your platform documents/attachments.",
        "requires_user_input": false,
        "ui_hints": { "primary_button": "Apply to Documents", "secondary_button": "Cancel" },
        "target_outcome_ref": { "from": "outcome.platform_patch_proposal" }
      }
    }
  ]
}
