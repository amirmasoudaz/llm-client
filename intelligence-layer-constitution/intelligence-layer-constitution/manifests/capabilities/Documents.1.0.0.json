{
  "capability": {
    "name": "Documents",
    "version": "1.0.0",
    "stage": "v1",
    "description": "Upload, process, review, optimize, and compose documents with artifact export and platform patch proposals.",
    "supported_intents": [
      "Documents.Upload",
      "Documents.Process",
      "Documents.Review",
      "Documents.Optimize",
      "Documents.Compose.SOP"
    ],
    "required_documents": [
      { "type": "resume", "min_status": "uploaded", "required": false },
      { "type": "sop", "min_status": "uploaded", "required": false }
    ],
    "dependencies": {
      "agents": ["Switchboard@1.x", "FollowUp@1.x"],
      "operators": [
        "Platform.Context.Load@1.0.0",
        "Documents.Upload@1.0.0",
        "Documents.Process@1.0.0",
        "Documents.Review@1.0.0",
        "Documents.Optimize@1.0.0",
        "Documents.Compose.SOP@1.0.0",
        "Documents.Export@1.0.0",
        "Documents.ApplyToPlatform.Propose@1.0.0",
        "Professor.Profile.Retrieve@1.0.0",
        "Professor.Summarize@1.0.0"
      ],
      "tools": []
    },
    "plan_templates": [
      { "intent_type": "Documents.Upload", "plan_template_ref": "plan-templates/documents_upload.plan.v1.json" },
      { "intent_type": "Documents.Process", "plan_template_ref": "plan-templates/documents_process.plan.v1.json" },
      { "intent_type": "Documents.Review", "plan_template_ref": "plan-templates/documents_review.plan.v1.json" },
      { "intent_type": "Documents.Optimize", "plan_template_ref": "plan-templates/documents_optimize.plan.v1.json" },
      { "intent_type": "Documents.Compose.SOP", "plan_template_ref": "plan-templates/documents_compose_sop.plan.v1.json" }
    ],
    "outcomes": [
      { "type": "Document.Uploaded", "schema": "schemas/outcomes/document_uploaded.v1.json" },
      { "type": "Document.Processed", "schema": "schemas/outcomes/document_processed.v1.json" },
      { "type": "Document.Review", "schema": "schemas/outcomes/document_review.v1.json" },
      { "type": "Document.Optimized", "schema": "schemas/outcomes/document_optimized.v1.json" },
      { "type": "Document.Composed", "schema": "schemas/outcomes/document_composed.v1.json" },
      { "type": "Artifact.PDF", "schema": "schemas/outcomes/artifact_pdf.v1.json" },
      { "type": "PlatformPatch.Proposal", "schema": "schemas/outcomes/platform_patch_proposal.v1.json" }
    ],
    "metrics": {
      "ops": [
        { "name": "DocProcessP95Seconds", "target": "<=20" },
        { "name": "S3ErrorRate", "target": "<=0.01" }
      ]
    }
  }
}

