{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/outcomes/outcome_base.v1.json",
  "title": "Outcome (base envelope) (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "outcome_id", "outcome_type", "created_at", "hash", "payload"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "outcome_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
    "outcome_type": { "type": "string", "minLength": 1 },
    "created_at": { "$ref": "../common/defs.v1.json#/$defs/ISODateTime" },
    "hash": { "$ref": "../common/defs.v1.json#/$defs/Hash" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "plugin_type": { "type": "string", "enum": ["agent", "operator", "tool", "adapter"] }
      }
    },
    "trace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "correlation_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
        "workflow_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
        "plan_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
        "step_id": { "type": "string", "minLength": 1 },
        "job_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
        "provider_trace_id": { "type": "string" }
      }
    },
    "usage_report": { "$ref": "../common/defs.v1.json#/$defs/UsageReport" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "data_classes": {
      "type": "array",
      "items": { "$ref": "../common/defs.v1.json#/$defs/DataClass" },
      "default": []
    },
    "warnings": { "type": "array", "items": { "type": "string" }, "default": [] },
    "payload": { "type": "object" }
  }
}

