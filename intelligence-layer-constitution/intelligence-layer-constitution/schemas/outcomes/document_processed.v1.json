{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/outcomes/document_processed.v1.json",
  "title": "Outcome: Document.Processed (v1)",
  "allOf": [
    { "$ref": "outcome_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "outcome_type": { "const": "Document.Processed" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["document_id", "processing_profile", "text_hash"],
          "properties": {
            "document_id": { "$ref": "../common/defs.v1.json#/$defs/DocumentId" },
            "processing_profile": { "type": "string", "minLength": 1 },
            "text_hash": { "$ref": "../common/defs.v1.json#/$defs/Hash" },
            "text_artifact": { "$ref": "../common/defs.v1.json#/$defs/ArtifactRef" },
            "page_count": { "type": "integer", "minimum": 0 },
            "extracted_fields": { "type": "object", "default": {} }
          }
        }
      }
    }
  ]
}

