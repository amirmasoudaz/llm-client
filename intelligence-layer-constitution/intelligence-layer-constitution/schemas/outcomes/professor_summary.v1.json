{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/outcomes/professor_summary.v1.json",
  "title": "Outcome: Professor.Summary (v1)",
  "allOf": [
    { "$ref": "outcome_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "outcome_type": { "const": "Professor.Summary" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["professor_id", "summary"],
          "properties": {
            "professor_id": { "$ref": "../common/defs.v1.json#/$defs/ProfessorId" },
            "profile_hash": { "$ref": "../common/defs.v1.json#/$defs/Hash" },
            "sources": {
              "type": "array",
              "items": { "type": "string", "enum": ["platform", "canspider", "web", "manual"] },
              "default": []
            },
            "canonical_url": { "$ref": "../common/defs.v1.json#/$defs/Url" },
            "summary": { "type": "string", "minLength": 1 },
            "highlights": { "type": "array", "items": { "type": "string" }, "default": [] },
            "research_areas": { "type": "array", "items": { "type": "string" }, "default": [] },
            "notable_publications": {
              "type": "array",
              "default": [],
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["title"],
                "properties": {
                  "title": { "type": "string", "minLength": 1 },
                  "year": { "type": "integer", "minimum": 1900, "maximum": 2100 },
                  "venue": { "type": "string" },
                  "url": { "$ref": "../common/defs.v1.json#/$defs/Url" }
                }
              }
            },
            "citation_urls": {
              "type": "array",
              "items": { "$ref": "../common/defs.v1.json#/$defs/Url" },
              "default": []
            },
            "custom_instruction": { "type": "string" }
          }
        }
      }
    }
  ]
}

