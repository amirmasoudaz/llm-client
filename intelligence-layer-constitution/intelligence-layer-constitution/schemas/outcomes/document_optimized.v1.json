{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/outcomes/document_optimized.v1.json",
  "title": "Outcome: Document.Optimized (v1)",
  "allOf": [
    { "$ref": "outcome_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "outcome_type": { "const": "Document.Optimized" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["document_id", "format", "artifact"],
          "properties": {
            "document_id": { "$ref": "../common/defs.v1.json#/$defs/DocumentId" },
            "format": { "type": "string", "enum": ["markdown", "latex", "docx", "text"] },
            "artifact": { "$ref": "../common/defs.v1.json#/$defs/ArtifactRef" },
            "change_summary": { "type": "string" },
            "requested_edits": { "type": "array", "items": { "type": "string" }, "default": [] }
          }
        }
      }
    }
  ]
}

