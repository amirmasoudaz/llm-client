{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/plans/plan_template.v1.json",
  "title": "Plan Template (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "plan_template_id", "intent_type", "plan_version", "steps"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "plan_template_id": { "type": "string", "minLength": 1 },
    "intent_type": { "type": "string", "minLength": 1 },
    "plan_version": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "step.v1.json" }
    }
  }
}

