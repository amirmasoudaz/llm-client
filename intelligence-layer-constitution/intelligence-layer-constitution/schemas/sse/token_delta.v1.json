{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/sse/token_delta.v1.json",
  "title": "SSE Event: token_delta (v1)",
  "allOf": [
    { "$ref": "event_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "token_delta" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["delta", "role"],
          "properties": {
            "delta": { "type": "string" },
            "role": { "type": "string", "enum": ["assistant"] }
          }
        }
      }
    }
  ]
}

