{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/intents/registry.v1.json",
  "title": "Intent Schema Registry (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "intents"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "intents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["intent_type", "schema_version", "schema_ref"],
        "properties": {
          "intent_type": { "type": "string", "minLength": 1 },
          "schema_version": { "$ref": "../common/defs.v1.json#/$defs/SchemaVersion" },
          "schema_ref": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}

