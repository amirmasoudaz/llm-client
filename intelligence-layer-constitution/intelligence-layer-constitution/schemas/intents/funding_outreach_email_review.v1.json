        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "email_text_override": { "type": "string" },
            "email_subject_override": { "type": "string" },
            "review_mode": { "type": "string", "enum": ["rubric"], "default": "rubric" },
            "custom_instructions": { "type": "string" }
