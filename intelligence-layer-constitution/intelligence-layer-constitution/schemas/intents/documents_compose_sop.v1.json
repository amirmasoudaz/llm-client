{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/intents/documents_compose_sop.v1.json",
  "title": "Intent: Documents.Compose.SOP (v1)",
  "allOf": [
    { "$ref": "../common/intent_base.v1.json" },
    {
      "type": "object",
      "required": ["thread_id"],
      "properties": {
        "schema_version": { "const": "1.0" },
        "intent_type": { "const": "Documents.Compose.SOP" },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "professor_ref": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "professor_id": { "$ref": "../common/defs.v1.json#/$defs/ProfessorId" },
                "url": { "$ref": "../common/defs.v1.json#/$defs/Url" }
              }
            },
            "requested_topics": { "type": "array", "items": { "type": "string" }, "default": [] },
            "additional_notes": { "type": "string" }
          },
          "default": {}
        }
      }
    }
  ]
}
