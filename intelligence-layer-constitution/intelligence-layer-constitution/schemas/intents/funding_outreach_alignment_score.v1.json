          "properties": {
            "professor_ref": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "professor_id": { "$ref": "../common/defs.v1.json#/$defs/ProfessorId" },
                "url": { "$ref": "../common/defs.v1.json#/$defs/Url" }
              }
            },
            "custom_instruction": { "type": "string" },
            "document_ids": {
              "type": "array",
              "items": { "$ref": "../common/defs.v1.json#/$defs/DocumentId" },
