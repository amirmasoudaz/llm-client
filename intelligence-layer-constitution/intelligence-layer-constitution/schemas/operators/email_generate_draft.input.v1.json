{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/email_generate_draft.input.v1.json",
  "title": "Operator: Email.GenerateDraft (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "student",
            "funding_request",
            "professor",
            "professor_summary",
            "alignment",
            "preferences",
            "goal"
          ],
          "properties": {
            "student": {
              "type": "object",
              "additionalProperties": true,
              "required": ["id"],
              "properties": {
                "id": { "$ref": "../common/defs.v1.json#/$defs/StudentId" }
              }
            },
            "funding_request": {
              "type": "object",
              "additionalProperties": true,
              "required": ["id"],
              "properties": {
                "id": { "$ref": "../common/defs.v1.json#/$defs/FundingRequestId" }
              }
            },
            "professor": {
              "type": "object",
              "additionalProperties": true,
              "required": ["id"],
              "properties": {
                "id": { "$ref": "../common/defs.v1.json#/$defs/ProfessorId" }
              }
            },
            "professor_summary": { "$ref": "../outcomes/professor_summary.v1.json" },
            "alignment": { "$ref": "../outcomes/alignment_score.v1.json" },
            "preferences": { "type": "object" },
            "goal": {
              "type": "string",
              "enum": ["initial_outreach", "follow_up", "reminder1", "reminder2", "reminder3"]
            },
            "hook": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "type": { "type": "string", "enum": ["paper", "project", "other"] },
                "title": { "type": "string" },
                "url": { "$ref": "../common/defs.v1.json#/$defs/Url" },
                "user_connection_note": { "type": "string" }
              }
            },
            "template_id": { "type": "integer", "minimum": 1 },
            "custom_instructions": { "type": "string" }
          }
        }
      }
    }
  ]
}

