{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/email_review_draft.input.v1.json",
  "title": "Operator: Email.ReviewDraft (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["professor", "funding_request"],
          "properties": {
            "draft": { "$ref": "../outcomes/email_draft.v1.json" },
            "subject": { "type": "string" },
            "body": { "type": "string" },
            "fallback_subject": { "type": "string" },
            "fallback_body": { "type": "string" },
            "professor": { "type": "object" },
            "funding_request": { "type": "object" },
            "custom_instructions": { "type": "string" }
          },
          "anyOf": [{ "required": ["draft"] }, { "required": ["body"] }, { "required": ["fallback_body"] }]
        }
      }
    }
  ]
}
