{
  "schema_version": "1.0",
  "plan_template_id": "Funding.Outreach.Email.Generate@1.0.0",
  "intent_type": "Funding.Outreach.Email.Generate",
  "plan_version": "planner-1.0",
  "description": "Generate a funding outreach email draft, review it, propose platform patch updates, and request approval to apply.",
  "steps": [
    {
      "step_id": "s1",
      "kind": "operator",
      "name": "Platform.Context.Load",
      "operator_name": "Platform.Context.Load",
      "operator_version": "1.0.0",
      "effects": ["read_only"],
      "policy_tags": ["read_only", "platform_read"],
      "risk_level": "low",
      "cache_policy": "ttl_only",
      "idempotency_template": "platform_context:{tenant_id}:{thread_id}",
      "payload": { "thread_id": { "from": "intent.thread_id" } },
      "produces": [
        "context.platform",
        "context.intelligence",
        "context.platform_context_hash",
        "context.student_background_hash",
        "context.composer_prereqs_hash"
      ]
    },
    {
      "step_id": "s2",
      "kind": "policy_check",
      "name": "Onboarding.EnsureEmailPrereqs",
      "effects": ["read_only"],
      "policy_tags": ["onboarding_gate"],
      "risk_level": "low",
      "cache_policy": "never",
      "check": {
        "check_name": "Onboarding.Ensure",
        "params": {
          "required_gates": ["base_profile_complete", "background_data_complete"],
          "on_missing_action_type": "collect_fields"
        }
      }
    },
    {
      "step_id": "s3",
      "kind": "operator",
      "name": "Professor.Profile.Retrieve",
      "operator_name": "Professor.Profile.Retrieve",
      "operator_version": "1.0.0",
      "effects": ["read_only"],
      "policy_tags": ["read_only", "public_web"],
      "risk_level": "low",
      "cache_policy": "ttl_only",
      "idempotency_template": "prof_profile:{tenant_id}:{context.platform.professor.id}:{context.platform.professor.canspider_digest_id}",
      "payload": {
        "professor_id": { "from": "context.platform.professor.id" },
        "professor_url": { "from": "context.platform.professor.url" },
        "canspider_digest_id": { "from": "context.platform.professor.canspider_digest_id" },
        "force_refresh": { "from": "intent.inputs.force_refresh" }
      },
      "produces": ["steps.s3.result.profile"]
    },
    {
      "step_id": "s4",
      "kind": "operator",
      "name": "Professor.Summarize",
      "operator_name": "Professor.Summarize",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["draft_only", "public_web"],
      "risk_level": "low",
      "cache_policy": "use_if_safe",
      "idempotency_template": "prof_summary:{tenant_id}:{context.platform.professor.id}:{steps.s3.result.profile.profile_hash.value}",
      "payload": {
        "professor_id": { "from": "context.platform.professor.id" },
        "profile": { "from": "steps.s3.result.profile" },
        "custom_instruction": { "from": "intent.inputs.professor_custom_instruction" }
      },
      "produces": ["outcome.professor_summary"]
    },
    {
      "step_id": "s5",
      "kind": "operator",
      "name": "Professor.Alignment.Score",
      "operator_name": "Professor.Alignment.Score",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["draft_only", "pii_allowed"],
      "risk_level": "low",
      "cache_policy": "use_if_safe",
      "idempotency_template": "alignment:{tenant_id}:{context.platform.student.id}:{context.platform.professor.id}:{outcome.professor_summary.hash.value}:{context.student_background_hash.value}",
      "payload": {
        "student_id": { "from": "context.platform.student.id" },
        "professor_id": { "from": "context.platform.professor.id" },
        "professor_summary": { "from": "outcome.professor_summary" },
        "student_background": { "from": "context.intelligence.background" }
      },
      "produces": ["outcome.alignment_score"]
    },
    {
      "step_id": "s6",
      "kind": "operator",
      "name": "Email.GenerateDraft",
      "operator_name": "Email.GenerateDraft",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["draft_only", "pii_allowed"],
      "risk_level": "low",
      "cache_policy": "use_if_safe",
      "idempotency_template": "email_draft:{tenant_id}:{thread_id}:{context.platform.funding_request.id}:{outcome.professor_summary.hash.value}:{context.student_background_hash.value}:{intent.inputs.goal}:{intent.inputs.template_id}",
      "payload": {
        "student": { "from": "context.platform.student" },
        "funding_request": { "from": "context.platform.funding_request" },
        "professor": { "from": "context.platform.professor" },
        "professor_summary": { "from": "outcome.professor_summary" },
        "alignment": { "from": "outcome.alignment_score" },
        "preferences": { "from": "context.intelligence.preferences" },
        "goal": { "from": "intent.inputs.goal" },
        "hook": { "from": "intent.inputs.hook" },
        "template_id": { "from": "intent.inputs.template_id" },
        "custom_instructions": { "from": "intent.inputs.custom_instructions" }
      },
      "produces": ["outcome.email_draft"]
    },
    {
      "step_id": "s7",
      "kind": "operator",
      "name": "Email.ReviewDraft",
      "operator_name": "Email.ReviewDraft",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["draft_only"],
      "risk_level": "low",
      "cache_policy": "use_if_safe",
      "idempotency_template": "email_review:{tenant_id}:{outcome.email_draft.outcome_id}",
      "payload": {
        "draft": { "from": "outcome.email_draft" },
        "professor": { "from": "context.platform.professor" },
        "funding_request": { "from": "context.platform.funding_request" }
      },
      "produces": ["outcome.email_review"]
    },
    {
      "step_id": "s8",
      "kind": "operator",
      "name": "Email.ApplyToPlatform.Propose",
      "operator_name": "Email.ApplyToPlatform.Propose",
      "operator_version": "1.0.0",
      "effects": ["produce_outcome"],
      "policy_tags": ["apply_proposal", "platform_write"],
      "risk_level": "medium",
      "cache_policy": "never",
      "idempotency_template": "patch_proposal:{tenant_id}:{context.platform.funding_request.id}:{outcome.email_draft.outcome_id}",
      "payload": {
        "funding_request_id": { "from": "context.platform.funding_request.id" },
        "email_id": { "from": "context.platform.email.id" },
        "draft": { "from": "outcome.email_draft" }
      },
      "produces": ["outcome.platform_patch_proposal"]
    },
    {
      "step_id": "s9",
      "kind": "human_gate",
      "name": "Apply.PlatformPatch",
      "effects": ["db_write_platform"],
      "policy_tags": ["apply", "platform_write"],
      "risk_level": "medium",
      "cache_policy": "never",
      "gate": {
        "gate_type": "apply_platform_patch",
        "reason_code": "REQUIRES_APPROVAL",
        "title": "Apply email changes",
        "description": "Apply the generated email subject/body to your funding request (platform DB).",
        "requires_user_input": false,
        "ui_hints": { "primary_button": "Apply changes", "secondary_button": "Cancel" },
        "target_outcome_ref": { "from": "outcome.platform_patch_proposal" }
      }
    }
  ]
}
