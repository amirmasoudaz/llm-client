{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/sse/final.v1.json",
  "title": "SSE Event: final (v1)",
  "allOf": [
    { "$ref": "event_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "final" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "final_text": { "type": "string" },
            "summary": { "type": "string" },
            "next_suggested_prompts": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["text"],
                "properties": {
                  "type": { "type": "string", "default": "followup" },
                  "text": { "type": "string", "minLength": 1 }
                }
              },
              "default": []
            },
            "usage_report": { "$ref": "../common/defs.v1.json#/$defs/UsageReport" },
            "actions_emitted": {
              "type": "array",
              "default": [],
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["action_id", "action_type"],
                "properties": {
                  "action_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
                  "action_type": { "type": "string", "minLength": 1 }
                }
              }
            },
            "outcomes_emitted": {
              "type": "array",
              "default": [],
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["outcome_id", "outcome_type", "hash"],
                "properties": {
                  "outcome_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
                  "outcome_type": { "type": "string", "minLength": 1 },
                  "hash": { "$ref": "../common/defs.v1.json#/$defs/Hash" }
                }
              }
            }
          }
        }
      }
    }
  ]
}

