{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/documents_review.input.v1.json",
  "title": "Operator: Documents.Review (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["document_id", "document_processed", "review_goal"],
          "properties": {
            "document_id": { "$ref": "../common/defs.v1.json#/$defs/DocumentId" },
            "document_type": {
              "type": "string",
              "enum": [
                "cv",
                "sop",
                "letter",
                "transcript",
                "portfolio",
                "study_plan",
                "certificate",
                "language_test",
                "identification",
                "photograph",
                "other",
                "resume",
                "cover_letter"
              ]
            },
            "document_processed": { "$ref": "../outcomes/document_processed.v1.json" },
            "review_goal": { "type": "string", "minLength": 1 },
            "custom_instructions": { "type": "string" }
          }
        }
      }
    }
  ]
}
