{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/memory_retrieve.output.v1.json",
  "title": "Operator: Memory.Retrieve (output) (v1)",
  "allOf": [
    { "$ref": "operator_result_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "result": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "required": ["student_id", "memory"],
          "properties": {
            "student_id": { "$ref": "../common/defs.v1.json#/$defs/StudentId" },
            "memory": {
              "type": "object",
              "additionalProperties": false,
              "required": ["entries", "by_type"],
              "properties": {
                "entries": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["memory_id", "type", "content", "updated_at"],
                    "properties": {
                      "memory_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
                      "type": {
                        "type": "string",
                        "enum": ["tone_style", "do_dont", "long_term_goal"]
                      },
                      "content": { "type": "string" },
                      "source": { "type": "string" },
                      "updated_at": { "$ref": "../common/defs.v1.json#/$defs/ISODateTime" }
                    }
                  }
                },
                "by_type": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
