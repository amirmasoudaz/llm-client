{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/thread_create_or_load.output.v1.json",
  "title": "Operator: Thread.CreateOrLoad (output) (v1)",
  "allOf": [
    { "$ref": "operator_result_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "result": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "required": ["thread_id", "thread_status", "onboarding_gate"],
          "properties": {
            "thread_id": { "$ref": "../common/defs.v1.json#/$defs/ThreadId" },
            "thread_status": { "type": "string", "enum": ["new", "active", "archived"] },
            "onboarding_gate": { "type": "string", "enum": ["ready", "needs_onboarding"] },
            "missing_requirements": { "type": "array", "items": { "type": "string" }, "default": [] },
            "latest_thread_summary": { "type": "string" }
          }
        }
      }
    }
  ]
}

