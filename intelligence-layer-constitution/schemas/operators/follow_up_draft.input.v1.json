{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/follow_up_draft.input.v1.json",
  "title": "Operator: FollowUp.Draft (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["reply_interpretation", "reply"],
          "properties": {
            "reply_interpretation": {
              "oneOf": [
                { "$ref": "../outcomes/reply_interpretation.v1.json" },
                { "type": "object", "additionalProperties": true }
              ]
            },
            "reply": { "type": "object", "additionalProperties": true },
            "funding_request": { "type": "object", "additionalProperties": true },
            "email_context": { "type": "object", "additionalProperties": true },
            "student_profile": { "type": "object", "additionalProperties": true },
            "tone": {
              "type": "string",
              "enum": ["professional", "warm", "concise"],
              "default": "professional"
            },
            "subject_override": { "type": "string" },
            "include_signature": { "type": "boolean", "default": true },
            "custom_instructions": { "type": "string" }
          }
        }
      }
    }
  ]
}
