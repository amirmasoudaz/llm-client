{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/platform_attachments_list.input.v1.json",
  "title": "Operator: Platform.Attachments.List (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["thread_id"],
          "properties": {
            "thread_id": { "$ref": "../common/defs.v1.json#/$defs/ThreadId" },
            "document_type": {
              "type": "string",
              "enum": [
                "cv",
                "sop",
                "letter",
                "transcript",
                "portfolio",
                "study_plan",
                "certificate",
                "language_test",
                "identification",
                "photograph",
                "other",
                "resume",
                "cover_letter"
              ]
            },
            "attachment_ids": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1 }
            }
          }
        }
      }
    }
  ]
}
