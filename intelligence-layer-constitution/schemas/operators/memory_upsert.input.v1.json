{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/memory_upsert.input.v1.json",
  "title": "Operator: Memory.Upsert (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["thread_id"],
          "properties": {
            "thread_id": { "$ref": "../common/defs.v1.json#/$defs/ThreadId" },
            "entries": {
              "type": "array",
              "default": [],
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "content"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["tone_style", "do_dont", "long_term_goal"]
                  },
                  "content": { "type": "string", "minLength": 1 },
                  "source": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  ]
}
