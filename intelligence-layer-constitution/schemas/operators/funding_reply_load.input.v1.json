{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/funding_reply_load.input.v1.json",
  "title": "Operator: FundingReply.Load (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "thread_id": { "$ref": "../common/defs.v1.json#/$defs/ThreadId" },
            "funding_request_id": { "$ref": "../common/defs.v1.json#/$defs/FundingRequestId" },
            "reply_id": { "type": "integer", "minimum": 1 },
            "max_items": { "type": "integer", "minimum": 1, "maximum": 20, "default": 5 }
          },
          "anyOf": [
            { "required": ["thread_id"] },
            { "required": ["funding_request_id"] }
          ]
        }
      }
    }
  ]
}
