{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/professor_summarize.input.v1.json",
  "title": "Operator: Professor.Summarize (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["professor_id", "profile"],
          "properties": {
            "professor_id": { "$ref": "../common/defs.v1.json#/$defs/ProfessorId" },
            "profile": {
              "type": "object",
              "additionalProperties": true,
              "required": ["profile_hash"],
              "properties": {
                "profile_hash": { "$ref": "../common/defs.v1.json#/$defs/Hash" }
              }
            },
            "custom_instruction": { "type": "string" }
          }
        }
      }
    }
  ]
}

