            "profile": { "type": "object" },
            "updated_fields": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 },
              "default": []
            },
            "validation": {
              "type": "object",
              "additionalProperties": false,
              "required": ["is_valid", "errors"],
              "properties": {
                "is_valid": { "type": "boolean" },
                "errors": {
                  "type": "array",
                  "items": { "type": "string" },
                  "default": []
                }
              }
            }
          }
        }
      }
    }
