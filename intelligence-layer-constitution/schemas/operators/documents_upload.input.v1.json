{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/operators/documents_upload.input.v1.json",
  "title": "Operator: Documents.Upload (input) (v1)",
  "allOf": [
    { "$ref": "operator_call_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["student_id", "thread_id", "document_type", "lifecycle", "artifact"],
          "properties": {
            "student_id": { "$ref": "../common/defs.v1.json#/$defs/StudentId" },
            "thread_id": { "$ref": "../common/defs.v1.json#/$defs/ThreadId" },
            "document_type": {
              "type": "string",
              "enum": ["resume", "sop", "transcript", "portfolio", "other"]
            },
            "title": { "type": "string" },
            "lifecycle": { "type": "string", "enum": ["temp", "sandbox", "final"] },
            "artifact": { "$ref": "../common/defs.v1.json#/$defs/ArtifactRef" }
          }
        }
      }
    }
  ]
}

