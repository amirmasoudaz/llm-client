{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/outcomes/email_draft.v1.json",
  "title": "Outcome: Email.Draft (v1)",
  "allOf": [
    { "$ref": "outcome_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "outcome_type": { "const": "Email.Draft" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["subject", "body"],
          "properties": {
            "funding_request_id": { "$ref": "../common/defs.v1.json#/$defs/FundingRequestId" },
            "email_id": { "$ref": "../common/defs.v1.json#/$defs/FundingEmailId" },
            "goal": {
              "type": "string",
              "enum": ["initial_outreach", "follow_up", "reminder1", "reminder2", "reminder3"]
            },
            "template_id": { "type": "integer", "minimum": 1 },
            "language": { "type": "string", "default": "en" },
            "subject": { "type": "string", "minLength": 1 },
            "body": { "type": "string", "minLength": 1 },
            "version_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
            "version_number": { "type": "integer", "minimum": 1 },
            "source_version_id": { "$ref": "../common/defs.v1.json#/$defs/Uuid" },
            "rationale": { "type": "string" },
            "diff_summary": { "type": "object" },
            "attachments": {
              "type": "array",
              "default": [],
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["artifact"],
                "properties": {
                  "document_id": { "$ref": "../common/defs.v1.json#/$defs/DocumentId" },
                  "role": { "type": "string", "enum": ["resume", "sop", "transcript", "other"] },
                  "artifact": { "$ref": "../common/defs.v1.json#/$defs/ArtifactRef" }
                }
              }
            },
            "custom_instructions": { "type": "string" },
            "notes": { "type": "string" }
          }
        }
      }
    }
  ]
}
