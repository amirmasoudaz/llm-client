{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/outcomes/document_uploaded.v1.json",
  "title": "Outcome: Document.Uploaded (v1)",
  "allOf": [
    { "$ref": "outcome_base.v1.json" },
    {
      "type": "object",
      "properties": {
        "outcome_type": { "const": "Document.Uploaded" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["document_id", "student_id", "thread_id", "document_type", "lifecycle", "artifact"],
          "properties": {
            "document_id": { "$ref": "../common/defs.v1.json#/$defs/DocumentId" },
            "student_id": { "$ref": "../common/defs.v1.json#/$defs/StudentId" },
            "thread_id": { "$ref": "../common/defs.v1.json#/$defs/ThreadId" },
            "document_type": {
              "type": "string",
              "enum": [
                "cv",
                "sop",
                "letter",
                "transcript",
                "portfolio",
                "study_plan",
                "certificate",
                "language_test",
                "identification",
                "photograph",
                "other",
                "resume"
              ]
            },
            "title": { "type": "string" },
            "lifecycle": { "type": "string", "enum": ["temp", "sandbox", "final"] },
            "artifact": { "$ref": "../common/defs.v1.json#/$defs/ArtifactRef" }
          }
        }
      }
    }
  ]
}
