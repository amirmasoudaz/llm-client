{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/common/intent_base.v1.json",
  "title": "Intent (base envelope) (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "intent_id", "intent_type", "actor", "source", "scope", "inputs"],
  "properties": {
    "schema_version": { "$ref": "defs.v1.json#/$defs/SchemaVersion" },
    "intent_id": { "$ref": "defs.v1.json#/$defs/Uuid" },
    "intent_type": { "type": "string", "minLength": 1 },
    "actor": { "$ref": "defs.v1.json#/$defs/Actor" },
    "source": { "type": "string", "enum": ["chat", "api", "webhook", "system"] },
    "thread_id": { "$ref": "defs.v1.json#/$defs/ThreadId" },
    "scope": { "$ref": "defs.v1.json#/$defs/Scope" },
    "inputs": { "type": "object" },
    "constraints": { "type": "object", "default": {} },
    "context_refs": { "type": "object", "default": {} },
    "data_classes": {
      "type": "array",
      "items": { "$ref": "defs.v1.json#/$defs/DataClass" },
      "default": []
    },
    "correlation_id": { "$ref": "defs.v1.json#/$defs/Uuid" },
    "created_at": { "$ref": "defs.v1.json#/$defs/ISODateTime" }
  }
}
