{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/intents/funding_request_fields_update.v1.json",
  "title": "Intent: Funding.Request.Fields.Update (v1) (propose patch)",
  "allOf": [
    { "$ref": "../common/intent_base.v1.json" },
    {
      "type": "object",
      "required": ["thread_id"],
      "properties": {
        "schema_version": { "const": "1.0" },
        "intent_type": { "const": "Funding.Request.Fields.Update" },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "required": ["fields"],
          "properties": {
            "fields": {
              "type": "object",
              "minProperties": 1,
              "additionalProperties": false,
              "properties": {
                "research_interest": { "type": "string", "minLength": 1, "maxLength": 1000 },
                "paper_title": { "type": "string", "minLength": 1, "maxLength": 500 },
                "journal": { "type": "string", "minLength": 1, "maxLength": 255 },
                "year": { "type": "integer", "minimum": 1900, "maximum": 2100 },
                "research_connection": { "type": "string", "minLength": 1, "maxLength": 12000 }
              }
            },
            "human_summary": { "type": "string" }
          }
        }
      }
    }
  ]
}
