{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/intents/documents_upload.v1.json",
  "title": "Intent: Documents.Upload (v1)",
  "allOf": [
    { "$ref": "../common/intent_base.v1.json" },
    {
      "type": "object",
      "required": ["thread_id"],
      "properties": {
        "schema_version": { "const": "1.0" },
        "intent_type": { "const": "Documents.Upload" },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "required": ["document_type", "artifact"],
          "properties": {
            "document_type": {
              "type": "string",
              "enum": ["resume", "sop", "transcript", "portfolio", "other"]
            },
            "title": { "type": "string" },
            "lifecycle": { "type": "string", "enum": ["temp", "sandbox", "final"], "default": "sandbox" },
            "artifact": { "$ref": "../common/defs.v1.json#/$defs/ArtifactRef" }
          }
        }
      }
    }
  ]
}
