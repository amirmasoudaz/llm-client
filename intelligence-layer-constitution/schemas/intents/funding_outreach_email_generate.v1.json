{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/intents/funding_outreach_email_generate.v1.json",
  "title": "Intent: Funding.Outreach.Email.Generate (v1)",
  "allOf": [
    { "$ref": "../common/intent_base.v1.json" },
    {
      "type": "object",
      "required": ["thread_id"],
      "properties": {
        "schema_version": { "const": "1.0" },
        "intent_type": { "const": "Funding.Outreach.Email.Generate" },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "required": ["goal"],
          "properties": {
            "goal": {
              "type": "string",
              "enum": ["initial_outreach", "follow_up", "reminder1", "reminder2", "reminder3"]
            },
            "custom_instructions": { "type": "string" },
            "professor_custom_instruction": { "type": "string" },
            "force_refresh": { "type": "boolean", "default": false },
            "template_id": { "type": "integer", "minimum": 1 },
            "include_signature": { "type": "boolean", "default": true },
            "include_resume": { "type": "boolean", "default": true },
            "hook": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "type": { "type": "string", "enum": ["paper", "project", "other"] },
                "title": { "type": "string" },
                "url": { "$ref": "../common/defs.v1.json#/$defs/Url" },
                "user_connection_note": { "type": "string" }
              }
            }
          }
        }
      }
    }
  ]
}
