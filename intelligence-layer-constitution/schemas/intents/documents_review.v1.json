{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/intents/documents_review.v1.json",
  "title": "Intent: Documents.Review (v1)",
  "allOf": [
    { "$ref": "../common/intent_base.v1.json" },
    {
      "type": "object",
      "required": ["thread_id"],
      "properties": {
        "schema_version": { "const": "1.0" },
        "intent_type": { "const": "Documents.Review" },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "document_id": { "$ref": "../common/defs.v1.json#/$defs/DocumentId" },
            "document_type": {
              "type": "string",
              "enum": [
                "cv",
                "sop",
                "letter",
                "transcript",
                "portfolio",
                "study_plan",
                "certificate",
                "language_test",
                "identification",
                "photograph",
                "other",
                "resume",
                "cover_letter"
              ]
            },
            "attachment_ids": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1 }
            },
            "review_goal": { "type": "string", "default": "quality" },
            "custom_instructions": { "type": "string" }
          }
        }
      }
    }
  ]
}
